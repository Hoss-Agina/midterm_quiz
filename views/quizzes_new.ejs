  <body>
    <%- include('partials/_header') %>

    <main style="margin: 1em;">
      <h3>Create Quizzel</h3>
      <div id="error-display"></div>
      <form class="form" action="/quizzes/new" method="POST">
        <div class="form-group" id="cont">
          <label for="title">Quizzel Name</label>
          <input
            class="form-control"
            type="text"
            name="title"
            style="width: 300px; margin: 1em"
          />
          <label for="question1">Question 1</label>
          <input
            class="form-control"
            type="text"
            name="question-1"
            style="width: 300px; margin: 1em"
          />
          <label for="answer1">Answer 1</label>
          <input
            class="form-control"
            placeholder="Insert Correct Answer"
            type="text"
            name="correct-answer-1"
            style="width: 300px; margin: 1em"
          />
          <label for="answer2">Answer 2</label>
          <input
            class="form-control"
            placeholder="Insert Wrong Answer"
            type="text"
            name="wrong-answer-1-2"
            style="width: 300px; margin: 1em"
          />
          <label for="answer3">Answer 3</label>
          <input
            class="form-control"
            placeholder="Insert Wrong Answer"
            type="text"
            name="wrong-answer-1-3"
            style="width: 300px; margin: 1em"
          />
          <label for="answer4">Answer 4</label>
          <input
            class="form-control"
            placeholder="Insert Wrong Answer"
            type="text"
            name="wrong-answer-1-4"
            style="width: 300px; margin: 1em"
          />
          <hr>
        </div>
        <label for="private">Make this Quizzel Private?</label>
          <input
            type="checkbox"
            name="check"
            value="check"
          />
          <hr>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <button class="btn btn-secondary" id="add-question">Add Question</button>
      <button class="btn btn-secondary" id="remove-question">Remove Last Question</button>
